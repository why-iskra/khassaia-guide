<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main_nested"
    app:startDestination="@id/nav_graph_map_controller">

    <include app:graph="@navigation/nav_graph_map_controller" />
    <include app:graph="@navigation/nav_graph_settings" />
    <include app:graph="@navigation/nav_graph_app_info" />

    <action
        android:id="@+id/action_global_nav_graph_settings"
        app:destination="@id/nav_graph_settings"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/slide_in"
        app:popExitAnim="@anim/fade_out" />
    <action
        android:id="@+id/action_global_nav_graph_map_controller"
        app:destination="@id/nav_graph_map_controller"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/slide_in"
        app:popExitAnim="@anim/fade_out" />
    <action
        android:id="@+id/action_global_nav_graph_app_info"
        app:destination="@id/nav_graph_app_info"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/slide_in"
        app:popExitAnim="@anim/fade_out" />
</navigation>